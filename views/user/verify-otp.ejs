<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CHOCOLUXE - Verify OTP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: #f5e8d4;
            font-family: 'Nunito Sans', sans-serif;
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }
        .container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        .verify-card {
            width: 100%;
            max-width: 450px;
            padding: 30px;
            border-radius: 15px;
            background-color: #fff9e6;
            box-shadow: 0 4px 15px rgba(74, 44, 42, 0.1);
            text-align: center;
        }
        .card-title {
            font-size: 2rem;
            font-weight: 800;
            color: #4a2c2a;
            margin-bottom: 25px;
        }
        .form-group label {
            font-size: 1rem;
            color: #555;
            text-align: left;
            display: block;
            margin-bottom: 5px;
        }
        .form-control {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 2px solid #4a2c2a;
            border-radius: 8px;
            font-size: 1rem;
            background-color: #fff;
            transition: border-color 0.3s, box-shadow 0.3s;
        }
        .form-control:focus {
            border-color: #d1a876;
            outline: none;
            box-shadow: 0 0 8px rgba(209, 168, 118, 0.5);
        }
        .btn-custom {
            background-color: #d1a876;
            color: white;
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            margin-top: 10px;
            transition: background-color 0.3s;
        }
        .btn-custom:hover {
            background-color: #b68d5a;
        }
        .btn-resend {
            background-color: #6c757d;
            color: white;
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            margin-top: 10px;
            transition: background-color 0.3s;
        }
        .btn-resend:hover {
            background-color: #5a6268;
        }
        .otp-timer {
            display: inline-block;
            margin-left: 15px;
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background-color: #fff;
            border: 2px solid #4a2c2a;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: relative;
            margin-top: 10px;
        }
        #timerValue {
            display: block;
            font-size: 24px;
            font-weight: 700;
            color: #4a2c2a;
            line-height: 70px;
            transition: color 0.3s;
        }
        #timerValue.expired {
            font-size: 14px;
            color: #dc3545;
        }
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border-radius: 5px;
            padding: 10px;
            margin-top: 15px;
            text-align: center;
            transition: opacity 0.3s;
        }
        .alert-danger.hide {
            opacity: 0;
            height: 0;
            padding: 0;
            margin: 0;
            overflow: hidden;
        }
        .text-muted {
            color: #6c757d;
            text-align: center;
            margin-top: 20px;
            font-size: 0.9rem;
        }
        .text-muted a {
            color: #d1a876;
            text-decoration: none;
            font-weight: 600;
        }
        .text-muted a:hover {
            text-decoration: underline;
        }
        @media (max-width: 768px) {
            .verify-card { max-width: 90%; margin: 0 10px; padding: 20px; }
            .card-title { font-size: 1.5rem; }
            .form-control { font-size: 0.9rem; padding: 10px; }
            .btn-custom, .btn-resend { font-size: 0.9rem; padding: 10px; }
            .otp-timer { width: 60px; height: 60px; }
            #timerValue { font-size: 20px; line-height: 60px; }
        }
        @media (max-width: 480px) {
            .card-title { font-size: 1.2rem; }
            .form-control { font-size: 0.8rem; padding: 8px; }
            .btn-custom, .btn-resend { font-size: 0.8rem; padding: 8px; }
            .otp-timer { width: 50px; height: 50px; margin-left: 10px; }
            #timerValue { font-size: 16px; line-height: 50px; }
            .text-muted { font-size: 0.8rem; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="verify-card">
            <h3 class="card-title">Verify OTP</h3>
            <% if (locals.message && message.length > 0) { %>
                <div class="alert alert-danger" id="serverMessage">
                    <%= message %>
                </div>
            <% } %>
            <form id="otpForm" method="post" action="/user/verify-otp" onsubmit="return validateOtp(event)">
                <div class="form-group">
                    <label for="otp">Enter OTP</label>
                    <input type="text" class="form-control" name="otp" id="otp" placeholder="Enter 6-digit OTP" required maxlength="6" pattern="\d*">
                </div>
                <div class="form-group text-center">
                    <div id="otpTimer" class="otp-timer">
                        <span id="timerValue">60</span>
                    </div>
                    <button type="button" class="btn btn-resend" id="resendOtp" disabled>Resend OTP</button>
                </div>
                <button type="submit" class="btn btn-custom">Verify</button>
            </form>
            <div class="text-muted">
                Already verified? <a href="/user/login">Login now</a>
            </div>
        </div>
    </div>
  
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById("otp").focus();

        let timer = 60;
        let timerInterval;
        let resendEnabled = false;

        function startTimer() {
            clearInterval(timerInterval);
            timer = 60;
            document.getElementById("timerValue").textContent = timer;
            document.getElementById("timerValue").classList.remove("expired");
            document.getElementById("otp").disabled = false;
            document.getElementById("resendOtp").disabled = true;

            timerInterval = setInterval(() => {
                timer--;
                document.getElementById("timerValue").textContent = timer;
                if (timer <= 0) {
                    clearInterval(timerInterval);
                    document.getElementById("timerValue").classList.add("expired");
                    document.getElementById("timerValue").textContent = "Expired";
                    document.getElementById("otp").disabled = true;
                    resendEnabled = true;
                    document.getElementById("resendOtp").disabled = false;
                }
            }, 1000);
        }

        startTimer();

        document.getElementById("resendOtp").addEventListener("click", function () {
    if (resendEnabled) {
        $.ajax({
            url: '/user/resend-otp',
            type: 'POST',
            data: { flow: 'signup' }, // Indicate signup flow
            success: function (response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'OTP Resent',
                        text: 'A new OTP has been sent to your email.',
                        timer: 1000,
                        showConfirmButton: false
                    });
                    startTimer();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message || 'Failed to resend OTP. Please try again.',
                    });
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred. Please try again.',
                });
            }
        });
    }
});

        function validateOtp(event) {
            event.preventDefault();
            const otp = document.getElementById('otp').value;

            if (!otp || !/^\d{6}$/.test(otp)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid OTP',
                    text: 'OTP must be a 6-digit number',
                });
                return false;
            }

            $.ajax({
                type: "POST",
                url: "/user/verify-otp",
                data: { otp: otp },
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: "success",
                            title: "OTP Verified Successfully",
                            showConfirmButton: false,
                            timer: 1000,
                        }).then(() => {
                            window.location.href = response.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: response.message || "Invalid OTP. Please try again.",
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "An error occurred. Please try again.",
                    });
                }
            });
            return false;
        }
    </script>
</body>
</html>