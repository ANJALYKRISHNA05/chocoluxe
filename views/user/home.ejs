        transition: all 0.3s ease;
    }
    
    .action-btn:hover {
        background-color: #4a2c2a;
        color: white;
    }
    
    .product-info {
        padding: 20px;
    }
    
    .product-name {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 5px;
        color: #4a2c2a;
    }
    
    .product-variant {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }
    
    .product-price-actions {
