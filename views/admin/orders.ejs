<%- include('../partials/admin/header') %>

<style>
  /* Base Layout Styles */
  .admin-layout {
    display: flex;
    min-height: 100vh;
    background-color: #f8f9fa;
    position: relative;
  }

  .main-content {
    flex: 1;
    margin-left: 250px;
    padding: 1.5rem;
    overflow-x: hidden;
    width: calc(100vw - 250px);
    min-width: 0; /* Prevents flex item from overflowing */
    box-sizing: border-box;
  }

  /* Header Styles */
  .page-header {
    display: flex;
    justify-content: between;
    align-items: center;
    padding: 1rem 0 1.5rem 0;
    border-bottom: 1px solid #dee2e6;
    margin-bottom: 1.5rem;
  }

  .page-title {
    font-size: 1.75rem;
    font-weight: 600;
    color: #333;
    margin: 0;
  }

  /* Search Form Styles */
  .search-card {
    background: #fff;
    border-radius: 0.5rem;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    margin-bottom: 1.5rem;
    padding: 1.5rem;
    width: 100%;
    box-sizing: border-box;
  }

  .search-form {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    align-items: end;
    width: 100%;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .form-control, .form-select {
    padding: 0.5rem 0.75rem;
    border: 1px solid #ced4da;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    width: 100%;
    box-sizing: border-box;
  }

  .btn-group {
    display: flex;
    gap: 0.5rem;
    width: 100%;
  }

  .btn {
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border: 1px solid transparent;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: center;
  }

  .btn-primary {
    background-color: #0d6efd;
    border-color: #0d6efd;
    color: #fff;
  }

  .btn-primary:hover {
    background-color: #0b5ed7;
    border-color: #0a58ca;
  }

  .btn-secondary {
    background-color: #6c757d;
    border-color: #6c757d;
    color: #fff;
  }

  .btn-secondary:hover {
    background-color: #5c636a;
    border-color: #565e64;
  }

  .btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
  }

  /* Table Styles */
  .table-container {
    background: #fff;
    border-radius: 0.5rem;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    overflow: hidden;
    margin-bottom: 1.5rem;
    width: 100%;
    box-sizing: border-box;
  }

  .table-responsive {
    overflow-x: auto;
    width: 100%;
  }

  .orders-table {
    width: 100%;
    margin: 0;
    border-collapse: collapse;
    table-layout: auto;
  }

  .orders-table th,
  .orders-table td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid #dee2e6;
    vertical-align: middle;
    white-space: nowrap;
  }

  .orders-table th {
    background-color: #f8f9fa;
    font-weight: 600;
    color: #495057;
    font-size: 0.875rem;
  }

  .orders-table td {
    font-size: 0.875rem;
  }

  .orders-table tbody tr:hover {
    background-color: #f8f9fa;
  }

  /* Badge Styles */
  .status-badge {
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .badge-success {
    background-color: #d1edff;
    color: #0f5132;
  }

  .badge-warning {
    background-color: #fff3cd;
    color: #664d03;
  }

  .badge-danger {
    background-color: #f8d7da;
    color: #721c24;
  }

  /* Pagination Styles */
  .pagination-wrapper {
    display: flex;
    justify-content: center;
    margin: 1.5rem 0;
    width: 100%;
  }

  .pagination {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .page-item {
    display: flex;
  }

  .page-link {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 2.5rem;
    height: 2.5rem;
    padding: 0.5rem;
    color: #4a2c2a;
    text-decoration: none;
    background-color: #fff;
    border: 1px solid #dee2e6;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
  }

  .page-link:hover {
    background-color: #d1a876;
    border-color: #d1a876;
    color: #4a2c2a;
  }

  .page-item.active .page-link {
    background-color: #d1a876;
    border-color: #d1a876;
    color: #4a2c2a;
  }

  .page-item.disabled .page-link {
    color: #6c757d;
    pointer-events: none;
    cursor: not-allowed;
    opacity: 0.6;
  }

  /* Info Text */
  .info-text {
    text-align: center;
    color: #6c757d;
    font-size: 0.875rem;
    margin-top: 1rem;
    width: 100%;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .main-content {
      margin-left: 200px;
      width: calc(100vw - 200px);
      padding: 1.25rem;
    }
  }

  @media (max-width: 992px) {
    .main-content {
      margin-left: 180px;
      width: calc(100vw - 180px);
      padding: 1rem;
    }

    .search-form {
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .main-content {
      margin-left: 80px;
      width: calc(100vw - 80px);
      padding: 0.75rem;
    }

    .page-title {
      font-size: 1.5rem;
    }

    .search-form {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .btn-group {
      justify-content: stretch;
    }

    .btn-group .btn {
      flex: 1;
    }

    .orders-table th,
    .orders-table td {
      padding: 0.5rem;
      font-size: 0.8rem;
    }

    .page-link {
      min-width: 2rem;
      height: 2rem;
      font-size: 0.8rem;
    }
  }

  @media (max-width: 576px) {
    .main-content {
      margin-left: 70px;
      width: calc(100vw - 70px);
      padding: 0.5rem;
    }

    .page-header {
      padding: 0.75rem 0 1rem 0;
    }

    .page-title {
      font-size: 1.25rem;
    }

    .search-card {
      padding: 1rem;
    }

    .orders-table th,
    .orders-table td {
      padding: 0.375rem;
      font-size: 0.75rem;
    }

    .btn-sm {
      padding: 0.2rem 0.4rem;
      font-size: 0.7rem;
    }

    .pagination {
      gap: 0.125rem;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .pagination::-webkit-scrollbar {
      display: none;
    }

    .page-link {
      min-width: 1.75rem;
      height: 1.75rem;
      font-size: 0.75rem;
    }
  }

  /* Extra small mobile devices */
  @media (max-width: 480px) {
    .main-content {
      margin-left: 65px;
      width: calc(100vw - 65px);
      padding: 0.375rem;
    }

    .search-card {
      padding: 0.75rem;
    }

    .page-title {
      font-size: 1.125rem;
    }

    .orders-table th,
    .orders-table td {
      padding: 0.25rem;
      font-size: 0.7rem;
    }
  }

  /* Very small mobile devices */
  @media (max-width: 400px) {
    .main-content {
      margin-left: 60px;
      width: calc(100vw - 60px);
      padding: 0.25rem;
    }

    .search-card {
      padding: 0.5rem;
    }

    .page-title {
      font-size: 1rem;
    }

    .search-form {
      gap: 0.5rem;
    }
  }

  /* Ultra small screens */
  @media (max-width: 360px) {
    .main-content {
      margin-left: 55px;
      width: calc(100vw - 55px);
      padding: 0.25rem;
    }

    .form-control, .form-select {
      padding: 0.375rem 0.5rem;
      font-size: 0.8rem;
    }

    .btn {
      padding: 0.375rem 0.75rem;
      font-size: 0.8rem;
    }
  }

  /* Ensure content never goes below sidebar on any screen */
  @media (max-width: 320px) {
    .main-content {
      margin-left: 50px;
      width: calc(100vw - 50px);
      padding: 0.125rem;
    }
  }

  /* Force proper layout on very small screens */
  @media (max-width: 280px) {
    .main-content {
      margin-left: 45px;
      width: calc(100vw - 45px);
      padding: 0.125rem;
    }

    .orders-table {
      font-size: 0.6rem;
    }

    .orders-table th,
    .orders-table td {
      padding: 0.2rem;
    }
  }
</style>

<body>
  <div class="admin-layout">
    <%- include('../partials/admin/sidebar', { activePage: 'orders' }) %>

    <main class="main-content">
      <!-- Page Header -->
      <div class="page-header">
        <h1 class="page-title">Orders Management</h1>
      </div>

      <!-- Search Form -->
      <div class="search-card">
        <form method="GET" action="/admin/orders" class="search-form">
          <div class="form-group">
            <input 
              type="text" 
              name="orderId" 
              class="form-control" 
              placeholder="Search by Order ID" 
              value="<%= typeof searchParams !== 'undefined' && searchParams.orderId ? searchParams.orderId : '' %>"
            >
          </div>
          
          <div class="form-group">
            <select name="status" class="form-select">
              <option value="">All Statuses</option>
              <option value="Pending" <%= typeof searchParams !== 'undefined' && searchParams.status === 'Pending' ? 'selected' : '' %>>Pending</option>
              <option value="Confirmed" <%= typeof searchParams !== 'undefined' && searchParams.status === 'Confirmed' ? 'selected' : '' %>>Confirmed</option>
              <option value="Shipped" <%= typeof searchParams !== 'undefined' && searchParams.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
              <option value="Delivered" <%= typeof searchParams !== 'undefined' && searchParams.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
              <option value="Cancelled" <%= typeof searchParams !== 'undefined' && searchParams.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
              <option value="Return Requested" <%= typeof searchParams !== 'undefined' && searchParams.status === 'Return Requested' ? 'selected' : '' %>>Return Requested</option>
              <option value="Returned" <%= typeof searchParams !== 'undefined' && searchParams.status === 'Returned' ? 'selected' : '' %>>Returned</option>
            </select>
          </div>
          
          <div class="form-group">
            <input 
              type="text" 
              name="username" 
              class="form-control" 
              placeholder="Search by Username" 
              value="<%= typeof searchParams !== 'undefined' && searchParams.username ? searchParams.username : '' %>"
            >
          </div>
          
          <div class="form-group">
            <div class="btn-group">
              <button type="submit" class="btn btn-primary">Search</button>
              <a href="/admin/orders" class="btn btn-secondary">Clear</a>
            </div>
          </div>
        </form>
      </div>

      <!-- Orders Table -->
      <div class="table-container">
        <div class="table-responsive">
          <table class="orders-table">
            <thead>
              <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Status</th>
                <th>Payment</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach((order) => { %>
                <tr>
                  <td><%= order.orderId %></td>
                  <td><%= order.user && order.user.username ? order.user.username : 'Unknown' %></td>
                  <td>₹<%= order.total.toFixed(2) %></td>
                  <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                  <td>
                    <span class="status-badge <%= order.status === 'Delivered' ? 'badge-success' : order.status === 'Cancelled' ? 'badge-danger' : 'badge-warning' %>">
                      <%= order.status %>
                    </span>
                  </td>
                  <td><%= order.paymentMethod %></td>
                  <td>
                    <a href="/admin/orders/view/<%= order.orderId %>" class="btn btn-primary btn-sm">View Details</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <div class="pagination-wrapper">
          <ul class="pagination">
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="/admin/orders?page=<%= currentPage - 1 %>&limit=<%= limit %><%= typeof searchParams !== 'undefined' ? `&orderId=${searchParams.orderId || ''}&status=${searchParams.status || ''}&username=${searchParams.username || ''}` : '' %>" aria-label="Previous">
                <span aria-hidden="true">«</span>
              </a>
            </li>
            
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/admin/orders?page=<%= i %>&limit=<%= limit %><%= typeof searchParams !== 'undefined' ? `&orderId=${searchParams.orderId || ''}&status=${searchParams.status || ''}&username=${searchParams.username || ''}` : '' %>"><%= i %></a>
              </li>
            <% } %>
            
            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="/admin/orders?page=<%= currentPage + 1 %>&limit=<%= limit %><%= typeof searchParams !== 'undefined' ? `&orderId=${searchParams.orderId || ''}&status=${searchParams.status || ''}&username=${searchParams.username || ''}` : '' %>" aria-label="Next">
                <span aria-hidden="true">»</span>
              </a>
            </li>
          </ul>
        </div>
      <% } %>

      <!-- Info Text -->
      <div class="info-text">
        <p>Showing <%= orders.length %> of <%= totalOrders %> orders</p>
      </div>
    </main>
  </div>

  <%- include('../partials/admin/footer') %>
</body>
</html>