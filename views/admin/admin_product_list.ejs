
    <style>
        :root {
            --primary-color: #4a2c2a;
            --secondary-color: #d1a876;
            --text-color: #fff9e6;
            --accent-color: #c99b6b;
            --bg-color: #f8f9fa;
        }
        
        .card {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: none;
            border-radius: 8px;
            overflow: hidden;
        }
        
        .card-header {
            background-color: var(--primary-color);
            color: var(--text-color);
            border-bottom: 2px solid var(--secondary-color);
            padding: 15px 20px;
        }
        
        .product-table th {
            background-color: #f1e8d8;
            color: var(--primary-color);
        }
        
        .product-table tbody tr:hover {
            background-color: #f5f5f5;
        }
        
        .btn-add {
            background-color: var(--secondary-color);
            color: var(--primary-color);
            border: none;
            font-weight: 600;
        }
        
        .btn-add:hover {
            background-color: var(--accent-color);
            color: var(--primary-color);
        }
        
        .product-img-container {
            width: 80px;
            height: 80px;
            overflow: hidden;
            border-radius: 4px;
            border: 2px solid #e9e2d5;
        }
        
        .product-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .status-badge {
            padding: 5px 10px;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 600;
        }
        
        .status-active {
            background-color: #d1e7dd;
            color: #095134;
        }
        
        .status-blocked {
            background-color: #f8d7da;
            color: #851a2c;
        }
        
        .action-btn {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-right: 5px;
            transition: all 0.3s ease;
        }
        
        .pagination-container {
            margin-top: 20px;
        }
        
        .search-container {
            max-width: 400px;
        }
    </style>
</head>
<body>
    <%- include('../partials/admin/header') %>
    <%- include('../partials/admin/sidebar', { activePage: 'products' }) %>
    
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h2 class="mb-3">Product Management</h2>
                </div>
                <div class="col-md-6 text-end">
                    <a href="/admin/products/add" class="btn btn-add">
                        <i class="fas fa-plus-circle me-2"></i>Add New Product
                    </a>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">All Products</h5>
                    <div class="search-container">
                        <form action="/admin/products" method="GET" class="d-flex">
                            <input 
                                type="text" 
                                name="search" 
                                class="form-control me-2" 
                                placeholder="Search products..." 
                                value="<%= searchQuery %>"
                            >
                            <button type="submit" class="btn btn-add">Search</button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table product-table">
                            <thead>
                                <tr>
                                    <th width="5%">No</th>
                                    <th width="15%">Image</th>
                                    <th width="20%">Product Name</th>
                                    <th width="15%">Category</th>
                                    <th width="10%">Variants</th>
                                    <th width="10%">Status</th>
                                    <th width="15%">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (products && products.length > 0) { %>
                                    <% products.forEach((product, index) => { %>
                                        <tr>
                                            <td><%= (currentPage - 1) * limit + index + 1 %></td>
                                            <td>
                                                <div class="product-img-container">
                                                    <% if (product.variants[0] && product.variants[0].productImage && product.variants[0].productImage.length > 0) { %>
                                                        <img src="<%= product.variants[0].productImage[0] %>" alt="<%= product.productName %>" class="product-img">
                                                    <% } else { %>
                                                        <img src="/images/no-image.png" alt="No Image" class="product-img">
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td><%= product.productName %></td>
                                            <td><%= product.category ? product.category.name : 'N/A' %></td>
                                            <td><%= product.variants ? product.variants.length : 0 %> variants</td>
                                            <td>
                                                <% if (product.isBlocked) { %>
                                                    <span class="status-badge status-blocked">Blocked</span>
                                                <% } else { %>
                                                    <span class="status-badge status-active">Active</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <a href="/admin/products/edit/<%= product._id %>" class="btn btn-primary action-btn" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <% if (product.isBlocked) { %>
                                                    <button class="btn btn-success action-btn unblock-btn" title="Unblock" data-id="<%= product._id %>">
                                                        <i class="fas fa-unlock"></i>
                                                    </button>
                                                <% } else { %>
                                                    <button class="btn btn-danger action-btn block-btn" title="Block" data-id="<%= product._id %>">
                                                        <i class="fas fa-lock"></i>
                                                    </button>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center py-4">No products found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <% if (totalPages > 1) { %>
                        <div class="pagination-container d-flex justify-content-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                        <a class="page-link" href="/admin/products?page=<%= currentPage - 1 %>&limit=<%= limit %><%= searchQuery ? '&search=' + searchQuery : '' %>">
                                            Previous
                                        </a>
                                    </li>
                                    
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                            <a class="page-link" href="/admin/products?page=<%= i %>&limit=<%= limit %><%= searchQuery ? '&search=' + searchQuery : '' %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                    <% } %>
                                    
                                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="/admin/products?page=<%= currentPage + 1 %>&limit=<%= limit %><%= searchQuery ? '&search=' + searchQuery : '' %>">
                                            Next
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../partials/admin/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Add SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Check for product addition success (assuming passed via query param)
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('added') === 'true') {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: 'Product added successfully!',
                    confirmButtonColor: '#d1a876',
                    timer: 3000,
                    timerProgressBar: true
                }).then(() => {
                    // Remove the query parameter to prevent repeated alerts
                    window.history.replaceState({}, document.title, window.location.pathname);
                });
            }

            // Block Product
            const blockBtns = document.querySelectorAll('.block-btn');
            blockBtns.forEach(btn => {
                btn.addEventListener('click', async function() {
                    const productId = this.getAttribute('data-id');
                    const result = await Swal.fire({
                        title: 'Are you sure?',
                        text: 'Do you want to block this product?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d1a876',
                        cancelButtonColor: '#851a2c',
                        confirmButtonText: 'Yes, block it!'
                    });

                    if (result.isConfirmed) {
                        try {
                            const response = await fetch(`/admin/products/block/${productId}`, {
                                method: 'PATCH',
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            });
                            
                            const data = await response.json();
                            if (data.success) {
                                await Swal.fire({
                                    icon: 'success',
                                    title: 'Blocked!',
                                    text: 'Product has been blocked successfully.',
                                    confirmButtonColor: '#d1a876',
                                    timer: 2000,
                                    timerProgressBar: true
                                });
                                location.reload();
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error!',
                                    text: 'Failed to block product.',
                                    confirmButtonColor: '#d1a876'
                                });
                            }
                        } catch (error) {
                            console.error('Error:', error);
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: 'An error occurred while blocking the product.',
                                confirmButtonColor: '#d1a876'
                            });
                        }
                    }
                });
            });
            
            // Unblock Product
            const unblockBtns = document.querySelectorAll('.unblock-btn');
            unblockBtns.forEach(btn => {
                btn.addEventListener('click', async function() {
                    const productId = this.getAttribute('data-id');
                    const result = await Swal.fire({
                        title: 'Are you sure?',
                        text: 'Do you want to unblock this product?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d1a876',
                        cancelButtonColor: '#851a2c',
                        confirmButtonText: 'Yes, unblock it!'
                    });

                    if (result.isConfirmed) {
                        try {
                            const response = await fetch(`/admin/products/unblock/${productId}`, {
                                method: 'PATCH',
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            });
                            
                            const data = await response.json();
                            if (data.success) {
                                await Swal.fire({
                                    icon: 'success',
                                    title: 'Unblocked!',
                                    text: 'Product has been unblocked successfully.',
                                    confirmButtonColor: '#d1a876',
                                    timer: 2000,
                                    timerProgressBar: true
                                });
                                location.reload();
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error!',
                                    text: 'Failed to unblock product.',
                                    confirmButtonColor: '#d1a876'
                                });
                            }
                        } catch (error) {
                            console.error('Error:', error);
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: 'An error occurred while unblocking the product.',
                                confirmButtonColor: '#d1a876'
                            });
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>