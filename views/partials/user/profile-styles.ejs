
<style>
    :root {
        --primary: #4a2c2a;
        --primary-light: #5a3c3a;
        --primary-dark: #3a1c1a;
        --accent: #d1a876;
        --accent-light: #e1b886;
        --accent-dark: #c09866;
        --background: #f5e8d4;
        --card-bg: #fff9e6;
        --text: #33261d;
        --text-muted: #5d534c;
        --border: #e9e2dc;
        --success: #c1ceae;
        --danger: #dc3545;
    }

    body, html {
        height: 100%;
        margin: 0;
        background-color: var(--background);
        font-family: 'Nunito Sans', sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        color: var(--text);
    }

   
    .content-container {
        display: flex;
        flex: 1;
        padding: 30px;
        gap: 30px;
    }

    .sidebar-container {
        width: 280px;
        flex-shrink: 0;
    }

    .main-content {
        flex: 1;
    }

 
    .profile-card {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(74, 44, 42, 0.08);
        padding: 30px;
        transition: all 0.3s ease;
        border: 1px solid var(--border);
        height: 100%;
    }

    .profile-card:hover {
        box-shadow: 0 8px 25px rgba(74, 44, 42, 0.12);
        transform: translateY(-3px);
    }


    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
    }

    .profile-image {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 30px;
        border: 3px solid white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .profile-image-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 30px;
    }

    .profile-image-preview {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 15px;
        border: 3px solid white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    /* Info Styles */
    .profile-info {
        flex: 1;
    }

    .info-group {
        margin-bottom: 20px;
    }

    .info-label {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .info-value {
        color: var(--text);
        font-size: 1.1rem;
        font-weight: 600;
    }

    /* Button Styles */
    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-primary, .btn-dark, .btn-edit {
        background-color: var(--primary);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover, .btn-dark:hover, .btn-edit:hover {
        background-color: var(--primary-dark);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(74, 44, 42, 0.2);
    }

    .btn-accent {
        background-color: var(--accent);
        color: var(--primary);
        border: none;
    }

    .btn-accent:hover {
        background-color: var(--accent-dark);
    }

    .btn-cancel, .btn-outline-dark {
        background-color: transparent;
        color: var(--primary);
        border: 2px solid var(--primary);
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-cancel:hover, .btn-outline-dark:hover {
        background-color: var(--primary);
        color: white;
    }

    .btn-outline-danger {
        background-color: transparent;
        color: var(--danger);
        border: 1px solid var(--danger);
    }

    .btn-outline-danger:hover {
        background-color: var(--danger);
        color: white;
    }

    .btn-outline-primary {
        background-color: transparent;
        color: var(--primary);
        border: 1px solid var(--primary);
    }

    .btn-outline-primary:hover {
        background-color: var(--primary);
        color: white;
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        color: var(--text);
        font-weight: 600;
        margin-bottom: 8px;
    }

    .form-control {
        padding: 12px 15px;
        border: 2px solid var(--border);
        border-radius: 8px;
        transition: all 0.3s ease;
        background-color: white;
    }

    .form-control:focus {
        border-color: var(--accent);
        box-shadow: 0 0 0 0.2rem rgba(209, 168, 118, 0.25);
    }

    /* Page Title */
    .page-title {
        font-family: 'Playfair Display', serif;
        color: var(--text);
        font-weight: 700;
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
        position: relative;
        padding-bottom: 0.75rem;
    }

    .page-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, var(--accent), transparent);
    }


    .address-card {
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 1.25rem;
        height: 100%;
        background: linear-gradient(145deg, #fff, #f8f3ef);
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

    .address-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(139, 90, 43, 0.15);
    }

    .address-card h5 {
        font-family: 'Playfair Display', serif;
        font-weight: 600;
        color: var(--text);
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
    }

    .address-card p {
        color: var(--text-muted);
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }

    .address-card .badge {
        font-weight: 500;
        padding: 0.4rem 0.75rem;
        border-radius: 50px;
    }

    .badge.bg-secondary {
        background-color: var(--primary) !important;
    }

    .badge.bg-primary {
        background-color: var(--accent) !important;
        color: var(--text);
    }

 
    .order-card {
        border: 1px solid var(--border);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        margin-bottom: 1.5rem;
        background-color: white;
    }

    .order-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(139, 90, 43, 0.15);
    }

    .order-header {
        background-color: #f8f5f2;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--border);
    }

    .order-body {
        padding: 1.5rem;
    }

    .order-footer {
        background-color: #f8f5f2;
        padding: 1rem 1.5rem;
        border-top: 1px solid var(--border);
    }

    /* Wallet Styles */
    .wallet-card {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .wallet-balance {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .transaction-item {
        border-bottom: 1px solid var(--border);
        padding: 1rem 0;
    }

    .transaction-item:last-child {
        border-bottom: none;
    }

    .transaction-amount.credit {
        color: #28a745;
    }

    .transaction-amount.debit {
        color: var(--danger);
    }

    
    .file-upload-wrapper {
        position: relative;
        overflow: hidden;
        display: inline-block;
    }

    .file-upload-wrapper input[type=file] {
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .image-upload-btn {
        background-color: var(--primary);
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 8px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .image-upload-btn:hover {
        background-color: var(--primary-dark);
    }

 
    .alert {
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    
    .empty-state {
        text-align: center;
        padding: 3rem 0;
    }

    .empty-state i {
        color: var(--accent);
        font-size: 3rem;
        margin-bottom: 1.5rem;
    }

    .empty-state h5 {
        font-family: 'Playfair Display', serif;
        color: var(--text);
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .empty-state p {
        color: var(--text-muted);
        max-width: 400px;
        margin: 0 auto 1.5rem;
    }

    @media (max-width: 992px) {
        .content-container {
            flex-direction: column;
            padding: 20px;
        }

        .sidebar-container {
            width: 100%;
            margin-bottom: 20px;
        }

        .profile-header {
            flex-direction: column;
            text-align: center;
        }

        .profile-image {
            margin-right: 0;
            margin-bottom: 20px;
        }

        .action-buttons {
            flex-wrap: wrap;
            justify-content: center;
        }
    }

    @media (max-width: 768px) {
        .content-container {
            padding: 15px;
        }

        .profile-card {
            padding: 20px;
        }

        .wallet-balance {
            font-size: 2rem;
        }

        .btn {
            width: 100%;
            margin-bottom: 10px;
        }

        .action-buttons {
            flex-direction: column;
            gap: 10px;
        }
    }

    @media (max-width: 576px) {
        .profile-image {
            width: 100px;
            height: 100px;
        }

        .profile-image-preview {
            width: 120px;
            height: 120px;
        }

        .page-title {
            font-size: 1.5rem;
        }

        .wallet-card {
            padding: 1.5rem;
        }

        .wallet-balance {
            font-size: 1.8rem;
        }
    }
</style>
